<%= link_to "Post Your First App", "#myModal", class: "btn btn-primary", "data-toggle" => "modal" %>
 
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Post Your First App</h3>
  </div>
  <%= form_for :post do |f| %>
    <div class="modal-body">
      <p>
        <%= f.label "Your app's name" %>
        <%= f.text_field :title %>
        <%= f.label "Your app's url" %>
        <%= f.text_field :url %>
      </p>
    </div>
    <div class="modal-footer">
      <%= f.submit "Post Your App", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<% @posts.each do |post| %>
  <h2><%= link_to post.title, post.url %></h2><%= link_to pluralize(post.comments.size, "comment"), post %><br />
  <%= post.points %>
  <%= link_to "vote up (#{post.upvotes})", up_post_path(post) %>
  <%= link_to "vote down (#{post.downvotes})", down_post_path(post) %>
<% end %>
